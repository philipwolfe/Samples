<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Microsoft.Samples.ClassRegistration.Menu"
        Title="ClassRegistration"
        SizeToContent="WidthAndHeight">
  <StackPanel Orientation="Vertical" Margin="10,10,10,10">

    <!-- Window Heading -->
    <DockPanel Background="#CCCCCC">
      <Label Background="#00FFFFFF" HorizontalContentAlignment="Center">Registration Main Menu</Label>
    </DockPanel>

    <!-- Register Menu Option-->
    <DockPanel>
      <Button IsDefault="True" Margin="10,10,10,10" Click="RegisterForClasses">Register</Button>
      
      <TextBlock TextWrapping="WrapWithOverflow"
                 VerticalAlignment="Center" 
                 Width="200">View and sign up for classes.</TextBlock>
    </DockPanel>

    <!-- View Status Menu Option -->
    <DockPanel>
      <Button Margin="10,10,10,10" Click="ViewSchedule">View Schedule</Button>
      <TextBlock TextWrapping="WrapWithOverflow"
                 VerticalAlignment="Center"
                 Width="200">View your current schedule and registration status.</TextBlock>
    </DockPanel>
  </StackPanel>
</Window>