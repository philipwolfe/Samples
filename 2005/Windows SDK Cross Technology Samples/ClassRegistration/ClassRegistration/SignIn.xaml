<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Microsoft.Samples.ClassRegistration.SignIn"
        Title="Class Registration - Sign In"
        SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Vertical" Margin="10,10,10,10">

      <!-- Window Heading -->
      <DockPanel Background="#CCCCCC" Width="200">
        <Label Background="#00FFFFFF" HorizontalContentAlignment="Center">Student Login</Label>
      </DockPanel>

      <!-- Student ID Text Box-->
      <DockPanel Margin="0,10,0,10">
        <Label>Student ID:</Label>
        <TextBox Name="StudentId" />
      </DockPanel>

      <!-- Sign In Button -->
      <Button IsDefault="True" Click="Submit">Submit</Button>
    </StackPanel>  
</Window>