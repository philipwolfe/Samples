<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <services>
      <!-- Before deployment, you should remove the returnFaults behavior configuration to avoid disclosing information in exception messages -->
      <service name="Microsoft.ServiceModel.Samples.RssService" behaviorConfiguration="noMetadata">
        <endpoint contract="Microsoft.ServiceModel.Samples.IUniversalContract" binding="customBinding" bindingConfiguration="rest"/>
      </service>
    </services>
    <bindings>
      <customBinding>
        <binding name="rest">
          <textMessageEncoding messageVersion="None" />
          <httpTransport/>
        </binding>
      </customBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="noMetadata" >
          <serviceDebug httpHelpPageEnabled="false" includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>