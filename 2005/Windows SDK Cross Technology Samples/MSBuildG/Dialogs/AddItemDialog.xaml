<dw:DialogWindow x:Class="Microsoft.Samples.MSBuildG.AddItemDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dw="clr-namespace:Microsoft.Samples.MSBuildG"
    Title="Add New Item"
	ResizeMode="NoResize"
	Width="500"
	Height="150"
	Style="{DynamicResource DialogWindowStyle}"
	WindowStartupLocation="CenterScreen"
	Loaded="WindowLoaded"
    >

  <Grid  Style="{DynamicResource DialogContentGrid}">
    <Grid VerticalAlignment="Center">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition/>
      </Grid.RowDefinitions>

      <TextBlock Grid.Column="0" Grid.Row="0">Item Title:</TextBlock>
      <TextBox Name="TitleBox" Style="{DynamicResource WizardEntryBox}" Width="310" Grid.Column="1" Grid.Row="0"/>
    </Grid>
  </Grid>
</dw:DialogWindow>
