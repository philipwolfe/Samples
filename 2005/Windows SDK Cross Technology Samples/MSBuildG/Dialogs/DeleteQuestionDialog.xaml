<dw:DialogWindow x:Class="Microsoft.Samples.MSBuildG.DeleteQuestionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:dw="clr-namespace:Microsoft.Samples.MSBuildG"
  Title="Delete Item"
	ResizeMode="NoResize"
	Width="400"
	Height="200"
	Style="{DynamicResource DialogWindowStyle}"
	WindowStartupLocation="CenterScreen"
	Loaded="WindowLoaded"
    >
	<Grid  Style="{DynamicResource DialogContentGrid}" VerticalAlignment="Center" HorizontalAlignment="Center">
		<StackPanel Orientation="Horizontal">
			<Image Source="pack://application:,,,/Icons/Warning.ico" Style="{DynamicResource DialogIcon}"/>
			<TextBlock Width="340" Style="{DynamicResource DialogMessage}">Are you sure you want to delete the selected item?</TextBlock>
		</StackPanel>
	</Grid>
</dw:DialogWindow>