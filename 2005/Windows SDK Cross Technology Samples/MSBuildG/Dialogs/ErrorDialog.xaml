<dw:DialogWindow x:Class="Microsoft.Samples.MSBuildG.ErrorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:dw="clr-namespace:Microsoft.Samples.MSBuildG"
  Title="An Error has Occurred"
	ResizeMode="NoResize"
	Width="400"
	Height="200"
	Style="{DynamicResource DialogWindowStyle}"
	WindowStartupLocation="CenterScreen"
	Loaded="WindowLoaded"
    >
	<Grid  Style="{DynamicResource DialogContentGrid}" VerticalAlignment="Center" HorizontalAlignment="Center">
		<StackPanel Orientation="Horizontal">
			<Image  Name="ErrorImage" Source="pack://application:,,,/Icons/Error.ico" Style="{DynamicResource DialogIcon}"/>
			<TextBlock Name="ErrorMessage" Width="330" Style="{DynamicResource DialogMessage}">Error Message</TextBlock>
		</StackPanel>
	</Grid>
</dw:DialogWindow>