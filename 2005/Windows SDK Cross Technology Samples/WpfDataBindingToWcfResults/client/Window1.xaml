<Window x:Class="WpfDataBindingToWcfResults.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WpfDataBindingToWcfResults" Height="184" Width="254.4">
  <StackPanel>
    <TextBox x:Name="_operand1">1.1</TextBox>
    <ComboBox x:Name="_op" SelectedIndex="0">
      <TextBlock>+</TextBlock>
      <TextBlock>-</TextBlock>
      <TextBlock>*</TextBlock>
      <TextBlock>/</TextBlock>
    </ComboBox>
    <TextBox x:Name="_operand2">2.2</TextBox>
    <Button x:Name="_equalsButton">=</Button>
    <!-- Binding to the Number and Words properties of the -->
    <!-- CalcResult class returned from the web service -->
    <TextBlock Text="{Binding Number}" />
    <TextBlock Text="{Binding Words}" />
  </StackPanel>
</Window>
