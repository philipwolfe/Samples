<Window x:Class="AvalonLife.ALModelNameDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Set Model Name" Height="150" Width="300" Background="LightGray" ResizeMode="NoResize" WindowStyle="ToolWindow"
    Loaded="On_ModelNameDlgLoaded" WindowStartupLocation="CenterOwner" SizeToContent="Height">
    <Window.Resources>
        <Style x:Key="OKButtonStyle" TargetType="{x:Type Button}" >
            <Setter Property="IsEnabled" Value="{Binding Path=Changed}" />
        </Style>
    </Window.Resources>
    <Grid>
        <DockPanel LastChildFill="False">
            <GroupBox Padding="0,4,0,2" Margin="5,15,5,5" DockPanel.Dock="Top" Header="Model Name:">
                <TextBox Height="20" Width="250" Name="ModelNameEdit" AutoWordSelection="True" />
            </GroupBox>
            <StackPanel Margin="5,0,5,5" FlowDirection="RightToLeft" Orientation="Horizontal" DockPanel.Dock="Bottom">
                <Button Name="ModelNameDlgOKButton" Style="{StaticResource OKButtonStyle}" Margin="0,0,5,0" Content="OK" 
                    Width="60" Click="On_ModelNameDlgOKButton" IsDefault="True" />
                <Button Name="ModelNameDlgCancelButton" Content="Cancel" Width="60" IsCancel="True"/>
            </StackPanel>
        </DockPanel>    
    </Grid>
</Window>
