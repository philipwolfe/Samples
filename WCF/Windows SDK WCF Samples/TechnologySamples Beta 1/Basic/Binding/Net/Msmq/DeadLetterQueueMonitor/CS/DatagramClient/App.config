<?xml version="1.0" ?>
<configuration>
    <appSettings>
        <add key="destinationQueueName" value=".\private$\DatagramOrderTaker" />
    </appSettings>
    <system.serviceModel>
        <client>
            <endpoint name="orderTakerEndpoint"
                      address="net.msmq://localhost/private/DatagramOrderTaker" 
                      binding="netMsmqBinding"
                      bindingConfiguration="defaultBinding"
                      contract="IDatagramOrderTaker"
                      />
        </client>
        <bindings>
            <netMsmqBinding>
                <binding name="defaultBinding" timeToLive="00:00:02" />
            </netMsmqBinding>
        </bindings>
    </system.serviceModel>
</configuration>