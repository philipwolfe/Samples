<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <appSettings>
    <!-- use appSetting to configure the Member Id -->
    <add key="member" value="peer2" />
  </appSettings>

  <system.serviceModel>

    <client>
      <!-- chat instance participating in the mesh -->
      <endpoint name="SecureChatEndpoint"
                address="net.p2p://SecureChatMesh/servicemodelsamples/chat" 
                binding="netPeerTcpBinding" 
                bindingConfiguration="SecureChatBinding" 
                contract="Microsoft.ServiceModel.Samples.IChat">
      </endpoint>
    </client>

    <bindings>
      <netPeerTcpBinding>
        <binding name="SecureChatBinding" port="9001">
          <resolver mode="Auto"/>
        </binding>
      </netPeerTcpBinding>
    </bindings>

  </system.serviceModel>

</configuration>
