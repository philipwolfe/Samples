      </serviceBehaviors>
    </behaviors>
    <bindings>
      <netTcpBinding>
        <binding name="comNonTransactionalBinding" />
      </netTcpBinding>
      <wsHttpBinding>
        <binding name="comNonTransactionalBinding">
          <reliableSession enabled="true" />
        </binding>
      </wsHttpBinding>
    </bindings>
    <comContracts>
      <comContract contract="{C551FBA9-E3AA-4272-8C2A-84BD8D290AC7}"
          name="ICalculator" namespace="http://microsoft.com/Microsoft.ServiceModel.Samples/EnterpriseServicesHosted"
          requiresSession="true">
        <exposedMethods>
          <add exposedMethod="Add" />
          <add exposedMethod="Subtract" />
          <add exposedMethod="Multiply" />
          <add exposedMethod="Divide" />
        </exposedMethods>
      </comContract>
    </comContracts>
    <services>
      <service behaviorConfiguration="ComServiceMexBehavior" name="{4CDCDB2C-0B19-4534-95CD-FBBFF4D67DD9},{C2B84940-AD54-4A44-B5F7-928130980AB9}">
        <endpoint address="ICalculator" binding="netTcpBinding" bindingConfiguration="comNonTransactionalBinding"
            contract="{C551FBA9-E3AA-4272-8C2A-84BD8D290AC7}" />
        <endpoint address="ICalculator" binding="wsHttpBinding" bindingConfiguration="comNonTransactionalBinding"
    contract="{C551FBA9-E3AA-4272-8C2A-84BD8D290AC7}" />
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:8081/ServiceModelHostedSample" />
            <add baseAddress="http://localhost:8082/ServiceModelHostedSample" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>