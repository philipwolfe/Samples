<Page 
    x:Class="SharedPages.CallingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowTitle="Calling Page"
    >
    <StackPanel>
        <TextBlock>
            <Hyperlink Name="startTaskHyperlink" Click="startTaskHyperlink_Click">Start Task</Hyperlink>
        </TextBlock>
        <TextBlock Name="taskResultsTextBlock" Visibility="Hidden">
            <LineBreak />
            <TextBlock FontWeight="Bold">Task State:</TextBlock>
            <LineBreak />
            <TextBlock Name="taskStateTextBlock" />
        </TextBlock>
    </StackPanel>
</Page>
