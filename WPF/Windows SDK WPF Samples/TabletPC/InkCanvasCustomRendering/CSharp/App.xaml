<Application x:Class="InkCanvasCustomRenderingSample.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Window1.xaml">
  <Application.Resources>

    <!-- Here's a style for the border around the InkCanvas -->
    <Style x:Key="inkBorder" TargetType="{x:Type Border}">
      <Setter Property="BorderThickness" Value="18px"/>
      <Setter Property="CornerRadius" Value="5"/>
      <Setter Property="Margin" Value="90,40,90,40"/>
      <Setter Property="MaxWidth" Value="540"/>
      <Setter Property="MaxHeight" Value="365"/>
      <Setter Property="BorderBrush">
        <Setter.Value>
          <LinearGradientBrush SpreadMethod="Reflect" StartPoint="0,0" EndPoint="0.5,0.5">
            <LinearGradientBrush.GradientStops>
              <GradientStop Color="DarkBlue" Offset="0" />
              <GradientStop Color="#eeeeee" Offset="1" />
            </LinearGradientBrush.GradientStops>
          </LinearGradientBrush>
        </Setter.Value>
      </Setter>
    </Style>
  </Application.Resources>
</Application>
