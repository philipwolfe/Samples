<configuration>
  <system.serviceModel>
    <services>
      <service name="Microsoft.NetFx35.Silver.Samples.Workflow1" behaviorConfiguration="ServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:8087/ConversationInitializer" />
          </baseAddresses>
        </host>
        <endpoint name="SellerEndPoint" 
                  address="Seller"
                  binding="netTcpContextBinding"
                  contract="Microsoft.NetFx35.Silver.Samples.IReceiveOrder" />
        <endpoint name="LogisticsEndPoint" 
                  address="Logistics"
                  binding="netTcpContextBinding"
                  contract="Microsoft.NetFx35.Silver.Samples.IOrderLogisticsQuotes" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehavior"  >
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceCredentials>
            <windowsAuthentication
                allowAnonymousLogons="false"
                includeWindowsGroups="true" />
          </serviceCredentials>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <client>
      <endpoint name="BuyerEndPoint" 
                address="net.tcp://localhost:8088/POCustomer/POBuyer"
                binding="netTcpContextBinding"
                contract="Microsoft.NetFx35.Silver.Samples.IOrderDetails" />
      <endpoint name="UPSEndPoint"
                address="net.tcp://localhost:8089/UPSConversation/GetLogisticsQuote"
                binding="netTcpContextBinding"
                contract="Microsoft.NetFx35.Silver.Samples.IOrderLogisticsRequest" />
      <endpoint name="FedExEndPoint" 
                address="net.tcp://localhost:8090/FedExConversation/GetLogisticsQuote"
                binding="netTcpContextBinding"
                contract="Microsoft.NetFx35.Silver.Samples.IOrderLogisticsRequest" />
      <endpoint name="USPSEndPoint"
                address="net.tcp://localhost:8091/USPSConversation/GetLogisticsQuote"
                binding="netTcpContextBinding"
                contract="Microsoft.NetFx35.Silver.Samples.IOrderLogisticsRequest" />

    </client>
    <bindings>
    </bindings>
