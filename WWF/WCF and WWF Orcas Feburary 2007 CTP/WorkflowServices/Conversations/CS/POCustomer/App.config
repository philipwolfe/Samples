<configuration>
  <system.serviceModel>
    <services>
      <service name="Microsoft.NetFx35.Silver.Samples.POCustomer" behaviorConfiguration="ServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:8088/POCustomer" />
          </baseAddresses>
        </host>
        <endpoint name="BuyerEndPoint"
                  address="POBuyer"
                  binding="netTcpContextBinding"
                  contract="Microsoft.NetFx35.Silver.Samples.IOrderDetails" />

      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehavior">
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceCredentials>
            <windowsAuthentication includeWindowsGroups="true" allowAnonymousLogons="false" />
          </serviceCredentials>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <client>
      <endpoint name="SellerEndPoint"
          address="net.tcp://localhost:8087/ConversationInitializer/Seller"
          binding="netTcpContextBinding"
          contract="Microsoft.NetFx35.Silver.Samples.IReceiveOrder" />

    </client>
    <bindings>
    </bindings>
