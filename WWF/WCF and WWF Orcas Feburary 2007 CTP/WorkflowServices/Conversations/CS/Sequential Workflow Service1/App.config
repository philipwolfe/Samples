<configuration>
  <system.serviceModel>
    <services>
      <service name="Sequential_Workflow_Service1.Workflow1" behaviorConfiguration="ServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:8087/Sequential_Workflow_Service1/Workflow1" />
          </baseAddresses>
        </host>
        <endpoint name="Workflow1EndPoint" 
                  address="Workflow1"
                  binding="netTcpContextBinding"
                  contract="Sequential_Workflow_Service1.IDemoContract" />

      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehavior"  >
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceCredentials>
            <windowsAuthentication
                allowAnonymousLogons="false"
                includeWindowsGroups="true" />
          </serviceCredentials>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <client>
    </client>
    <bindings>
    </bindings>
    <extensions>
      <bindingElementExtensions>
        <add name="context" type="System.ServiceModel.Configuration.ContextBindingElementExtensionElement, System.WorkflowServices, Version=1.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35, processorArchitecture=MSIL" />
      </bindingElementExtensions>
      <bindingExtensions>
        <add name="wsHttpContextBinding" 
             type="System.ServiceModel.Configuration.WSHttpContextBindingCollectionElement, System.WorkflowServices, Version=1.0.0.0"/>
        <add name="netTcpContextBinding"
             type="System.ServiceModel.Configuration.NetTcpContextBindingCollectionElement, System.WorkflowServices, Version=1.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35, processorArchitecture=MSIL" />
      </bindingExtensions>
    </extensions>
  </system.serviceModel>
</configuration>
