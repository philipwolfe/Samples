<configuration>
  <system.serviceModel>
    <services>
      <service name="Microsoft.WorkflowServices.Samples.SupplierWorkflow" behaviorConfiguration="ServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:8087/Supplier/Order.svc" />
          </baseAddresses>
        </host>
        <endpoint address=""
                  binding="netTcpContextBinding"
                  contract="Microsoft.WorkflowServices.Samples.IOrder" />
        <endpoint address=""
                  binding="netTcpContextBinding"
                  contract="Microsoft.WorkflowServices.Samples.IShippingQuote" />
      </service>
    </services>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehavior"  >
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceCredentials>
            <windowsAuthentication
                allowAnonymousLogons="false"
                includeWindowsGroups="true" />
          </serviceCredentials>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    
    <client>
      <endpoint name="CustomerEndpoint" 
                address="net.tcp://localhost:8088/Customer/Listener.svc"
                binding="netTcpContextBinding"
                contract="Microsoft.WorkflowServices.Samples.IOrderDetails" />
      <endpoint name="UPSEndpoint"
                address="net.tcp://localhost:8089/UPS/Shipper.svc"
                binding="netTcpContextBinding"
                contract="Microsoft.WorkflowServices.Samples.IShippingRequest" />
      <endpoint name="FedExEndpoint" 
                address="net.tcp://localhost:8090/Fedex/Shipper.svc"
                binding="netTcpContextBinding"
                contract="Microsoft.WorkflowServices.Samples.IShippingRequest" />
      <endpoint name="USPSEndpoint"
                address="net.tcp://localhost:8091/USPS/Shipper.svc"
                binding="netTcpContextBinding"
                contract="Microsoft.WorkflowServices.Samples.IShippingRequest" />

    </client>

  </system.serviceModel>
</configuration>
