<configuration>
  <system.serviceModel>
    <services>
      <service
       name="Microsoft.Samples.BlobMessageEncoder.FileService"
       behaviorConfiguration="BlobEncoderServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8000/blob"/>
          </baseAddresses>
        </host>
        <!-- configure http endpoint, use base address provided by host -->
        <endpoint behaviorConfiguration="webHttpBehavior"
                  address=""
                  binding="blobHttpBinding"
                  bindingConfiguration="blobHttpBinding"
                  contract="Microsoft.Samples.BlobMessageEncoder.IHttpHandler" />
      </service>
    </services>
    <bindings>
      <blobHttpBinding>
        <binding name="blobHttpBinding" maxBufferSize="131070"
                  transferMode="Streamed"
                  maxBufferPoolSize="131070"
                  maxReceivedMessageSize="131070">
          <readerQuotas maxDepth="32" maxStringContentLength="131070" maxArrayLength="131070"
                        maxBytesPerRead="131070" maxNameTableCharCount="131070" />
        </binding>
      </blobHttpBinding>
    </bindings>
    <extensions>
      <bindingExtensions>
        <add name="blobHttpBinding" type="Microsoft.Samples.BlobMessageEncoder.BlobHttpBindingCollectionElement, BlobHttpBinding, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null" />
      </bindingExtensions>
    </extensions>
    <behaviors>
      <serviceBehaviors>
        <behavior name="BlobEncoderServiceBehavior">
          <serviceMetadata httpGetEnabled="True"/>
          <serviceDebug includeExceptionDetailInFaults="False" />
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name ="webHttpBehavior">
        </behavior>
      </endpointBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>
