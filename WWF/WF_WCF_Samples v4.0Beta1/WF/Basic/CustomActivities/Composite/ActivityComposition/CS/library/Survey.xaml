<Activity x:Class="Microsoft.Samples.Activities.Survey"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mws="clr-namespace:Microsoft.Samples.Activities;assembly=library"
  xmlns:scg="clr-namespace:System.Collections.Generic;assembly=mscorlib" 
  xmlns:s="clr-namespace:System;assembly=mscorlib"
  xmlns="http://schemas.microsoft.com/netfx/2009/xaml/activities">
  <x:Members>
    <x:Property Name="Questions" Type="InArgument(scg:IEnumerable(s:String))" />
    <x:Property Name="Results" Type="InOutArgument(scg:ICollection(s:String))" />
  </x:Members>
  <ForEach x:TypeArguments="s:String" Values="[Questions]">
    <ForEach.Body>
      <ActivityAction x:TypeArguments="s:String">
        <ActivityAction.Argument>
          <Variable Name="question" x:TypeArguments="s:String" />
        </ActivityAction.Argument>
        <Sequence>
          <Sequence.Variables>
            <Variable Name="response" x:TypeArguments="s:String" />
          </Sequence.Variables>
          <mws:Prompt Response="[response]" Text="[question]" />
          <AddToCollection x:TypeArguments="s:String" Item='["question: " + question + " response: " + response]' Collection="[Results]" />
        </Sequence>
      </ActivityAction>
    </ForEach.Body>
  </ForEach>
</Activity>