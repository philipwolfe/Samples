<?xml version ="1.0"?>
<configuration>
	<configSections>
		<sectionGroup name="Microsoft.Workflow.Samples.DynamicUpdate" type="Microsoft.Workflow.Samples.Administration.DynamicUpdateSampleConfigurationSectionGroup, WorkflowAdminService, Version=1.0.0.0, Culture=neutral, processorArchitecture=MSIL">
			<section name="assemblyReferences" type="Microsoft.Workflow.Samples.Administration.ReferenceAssemblySectionHandler, WorkflowAdminService, Version=1.0.0.0, Culture=neutral, processorArchitecture=MSIL"/>
			<section name="toolboxItems" type="Microsoft.Workflow.Samples.Administration.WorkflowActivityTypeSectionHandler, WorkflowAdminService, Version=1.0.0.0, Culture=neutral, processorArchitecture=MSIL"/>
			
			<section name="activateWorkflowTypeOne" type="Microsoft.Workflow.Samples.Administration.ActivateWorkflowTypeSectionHandler, WorkflowAdminService, Version=1.0.0.0, Culture=neutral, processorArchitecture=MSIL"/>
			<section name="activateWorkflowTypeTwo" type="Microsoft.Workflow.Samples.Administration.ActivateWorkflowTypeSectionHandler, WorkflowAdminService, Version=1.0.0.0, Culture=neutral, processorArchitecture=MSIL"/>
			
			<section name="liveTrackingDatabase" type="Microsoft.Workflow.Samples.Administration.SqlConnectionInfoSectionHandler, WorkflowAdminService, Version=1.0.0.0, Culture=neutral, processorArchitecture=MSIL"/>
			<section name="instanceDataProviderTrackingDatabase" type="Microsoft.Workflow.Samples.Administration.SqlConnectionInfoSectionHandler, WorkflowAdminService, Version=1.0.0.0, Culture=neutral, processorArchitecture=MSIL"/>
		</sectionGroup>
	</configSections>
	
	<Microsoft.Workflow.Samples.DynamicUpdate>
		<!-- all assemlbies with custom types used in live/tracked workflows, on the toolbox and for activation should be listed here -->
		<assemblyReferences>
			<referenceAssembly AssemblyPath="ActivityLibrary1.dll"/>
		</assemblyReferences>
		
		<!-- list of the activity types wanted on the toolbox -->
		<toolboxItems>
			<workflowActivityType Assembly="System.Workflow.Activities" TypeName="System.Workflow.Activities.SequenceActivity"/>
			<workflowActivityType Assembly="System.Workflow.Activities" TypeName="System.Workflow.Activities.ParallelActivity"/>
			<workflowActivityType Assembly="System.Workflow.ComponentModel" TypeName="System.Workflow.ComponentModel.ThrowActivity"/>
			<workflowActivityType Assembly="System.Workflow.ComponentModel" TypeName="System.Workflow.ComponentModel.SuspendActivity"/>
			<workflowActivityType Assembly="System.Workflow.ComponentModel" TypeName="System.Workflow.ComponentModel.TerminateActivity"/>
			<workflowActivityType Assembly="ActivityLibrary1" TypeName="ActivityLibrary1.Activity1"/>
		</toolboxItems>

		<!-- workflow to be activated when user clicks button "start instance 1" -->
		<activateWorkflowTypeOne>
			<workflowActivityType Assembly="ActivityLibrary1" TypeName="ActivityLibrary1.Activity1"/>
		</activateWorkflowTypeOne>
		
		<!-- workflow to be activated when user clicks button "start instance 2" -->
		<activateWorkflowTypeTwo>
			<workflowActivityType Assembly="ActivityLibrary1" TypeName="ActivityLibrary1.Workflow1"/>
		</activateWorkflowTypeTwo>

		<!-- database connection info for the runtime to push data into (Read/Write)-->
		<!-- use this string if you want to track instances run in the host: "Initial Catalog=MyTrackingDb;Server=localhost;Integrated Security=SSPI;"-->
		<liveTrackingDatabase>
			<sqlConnectionInfo ConnectionString=""/> 
		</liveTrackingDatabase>

		<!-- database used by the sample application to show list of executed instances and their data (Read only)-->
		<instanceDataProviderTrackingDatabase>
			<sqlConnectionInfo ConnectionString="Initial Catalog=MyTrackingDb;Server=localhost\sqlexpress;Integrated Security=SSPI;"/>
		</instanceDataProviderTrackingDatabase>
	</Microsoft.Workflow.Samples.DynamicUpdate>
</configuration>
